@require '~inkline/css/config/index'

.code-preview
    display: block
    position: relative
    padding: --spacer
    border-radius: --border-radius['md']
    border: 1px solid --colors['gray-20']

    + .code-preview
        margin-top: --spacer

    > .header
        display: flex
        align-items: center
        justify-content: space-between
        margin-bottom: --spacer

        > .title
            font-weight: bold
            display: inline-block
            margin-right: --spacer

        > .tabs
            > .link
                margin-left: --spacer

    &.-expanded > .panels
        margin-left: -17px
        margin-right: -17px

    > .panels
        display: block
        position: relative
        overflow: hidden

        .panel
            width: 100%

